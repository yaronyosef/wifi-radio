<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent">

	<TextView
	android:id="@+id/radio_list_item_name"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:text="Temporary Name"
	android:textSize="25dp"
	/>
	
	<View 
	android:id="@+id/radio_list_item_divider"
	android:layout_width="0dp"
	android:layout_height="0dp"
	android:layout_centerHorizontal="true"
	android:layout_below="@id/radio_list_item_name"
	/>

	<TextView
	android:id="@+id/radio_list_item_station"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_alignParentLeft="true"
	android:layout_toLeftOf="@id/radio_list_item_divider"
	android:layout_below="@id/radio_list_item_name"
	android:text="Station:"
	android:textSize="18dp"
	/>

	<TextView
	android:id="@+id/radio_list_item_port"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_alignParentRight="true"
	android:layout_toRightOf="@id/radio_list_item_divider"
	android:layout_below="@id/radio_list_item_name"
	android:text="Port:"
	android:textSize="18dp"
	/>

</RelativeLayout>
